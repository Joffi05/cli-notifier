<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Existing UI Components -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Webhook Server is Running"
        android:textSize="18sp"
        android:layout_marginBottom="24dp" />

    <!-- New UI Components for Secret Token -->
    <TextView
        android:id="@+id/tv_secret_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Secret Token:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_secret"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Secret Token"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_save_secret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Secret" />

    <!-- Spacer or other UI elements as needed -->
</LinearLayout>
